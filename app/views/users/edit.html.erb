
<%= render partial: 'common/page_title', locals: { titulo: 'Editar usuÃ¡rio' } %>


<%= bootstrap_form_for @user, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6' do |f| %>

    <%= f.alert_message 'Favor corrigir o(s) erro(s) abaixo.' %>

    <%= f.static_control nil, label: 'Evento' do %>
        <%= @user.name %>
    <% end %>

    <%= f.collection_select :role, User::ROLES, :to_s, :humanize, control_col: 'col-sm-2' %>

    <%= f.submit 'Salvar' %>

    <%= link_to 'Cancelar', users_path, class: 'btn btn-link' %>

<% end %>
