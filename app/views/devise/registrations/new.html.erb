<%= render 'common/page_title', titulo: 'Crie uma conta' %>

<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name),
                       layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-4') do |f| %>

    <%= devise_error_messages! %>

    <%= f.text_field :name, label: 'Nome', autofocus: true %>
    <%= f.email_field :email %>
    <%= f.password_field :password, label: 'Senha', control_col: 'col-sm-2' %>
    <%= f.password_field :password_confirmation, label: 'Confirmar senha', control_col: 'col-sm-2' %>

    <%= f.form_group do %>
        <%= f.submit 'Criar', class: 'btn btn-success' %>
    <% end %>

<% end %>

