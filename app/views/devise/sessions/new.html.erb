
<%= render partial: 'common/titulo_pagina', locals: { titulo: 'Entrar' } %>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name),
                       layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-4') do |f| %>

    <%= f.email_field :email, autofocus: true %>
    <%= f.password_field :password, label: 'Senha', control_col: 'col-sm-2' %>

    <% if devise_mapping.rememberable? -%>
        <%= f.form_group do %>
            <%= f.check_box :remember_me, label: 'Continuar conectado' %>
        <% end %>
    <% end %>

    <%= f.form_group do %>
        <%= f.submit 'Entrar', class: 'btn btn-success' %>
    <% end %>

<% end %>

<%= render "devise/shared/links" %>

