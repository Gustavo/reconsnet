<%= render 'common/page_title', titulo: 'Mudar senha' %>

<%= bootstrap_form_for(resource, as: resource_name,
                       url: password_path(resource_name),
                       layout: :horizontal,
                       html: { method: :put }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password, label: 'Nova senha', control_col: 'col-3',
                       autofocus: true, autocomplete: 'off' %>

  <%= f.password_field :password_confirmation, label: 'Confirme nova senha',
                       control_col: 'col-3',
                       autocomplete: 'off' %>
  <%= f.form_group do %>
     <%= f.submit 'Mude minha senha', class: 'btn btn-primary' %>
  <% end %>

<% end %>

