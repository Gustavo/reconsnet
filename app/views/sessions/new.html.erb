
<h2>Login</h2>

<% if flash[:alert] %>
    <div class="notice"><%= flash[:alert] %></div>
<% end %>


<%= form_tag '/auth/identity/callback', class: 'form-horizontal' do |f| %>

    <div class="form-group">
      <%= label_tag :auth_key, 'E-mail', class: 'col-sm-3 control-label' %><br>
      <div class="col-sm-4">
        <%= text_field_tag :auth_key, '', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :password, 'Senha', class: 'col-sm-3 control-label' %><br>
      <div class="col-sm-4">
        <%= password_field_tag :password, '', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= submit_tag 'Entrar', class: 'btn btn-primary' %>
      </div>
    </div>

<% end %>
