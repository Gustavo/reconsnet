<%= bootstrap_form_for @pessoa, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6' do |f| %>

    <%= f.alert_message 'Favor corrigir o(s) erro(s) abaixo.' %>

    <%= f.text_field :name %>
    <%= f.email_field :email, label: 'E-mail', control_col: 'col-sm-3' %>
    <%= f.select :sexo, [%w(Masculino M), %w(Feminino F)], control_col: 'col-sm-3' %>
    <%= f.submit 'Salvar' %>
    <% if action_name == 'edit' %>
        <% link = pessoa_path(@pessoa) %>
    <% else %>
        <% link = pessoas_path %>
    <% end %>
    <%= link_to 'Cancelar', link, class: 'btn btn-link' %>

<% end %>