<% size = local_assigns.fetch :size, '' %>
<% disabled = local_assigns.fetch :disabled, false %>
<% btn_label = local_assigns.fetch :btn_label, 'Deletar' %>
<% url = local_assigns.fetch :url, false %>
<% url = polymorphic_path(resource, page: params[:page], query: params[:query], order: params[:order]) unless url %>

<% if policy(resource).destroy? %>
    <%= link_to "<i title=\"Deletar\" class=\"fa fa-times text-danger\"></i> #{btn_label}".html_safe,
            url, class: "btn btn-default #{size}", method: :delete,
            data: { confirm: "VocÃª tem certeza que deseja deletar \"#{resource.to_s}\"?" },
            disabled: disabled %>
<% end %>