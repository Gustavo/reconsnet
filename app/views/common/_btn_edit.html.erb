<% size = local_assigns.fetch :size, '' %>
<% disabled = local_assigns.fetch :disabled, false %>
<% btn_label = local_assigns.fetch :btn_label, 'Editar' %>
<% url = local_assigns.fetch :url, false %>
<% url = polymorphic_path(resource, action: :edit) unless url %>

<% if policy(resource).edit? %>
    <%= link_to "<i title=\"Editar\" class=\"fa fa-pencil text-info\"></i> #{btn_label}".html_safe,
                url, class: "btn btn-link #{size}", disabled: disabled %>
<% end %>