<% if user_signed_in? %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li><%= link_to 'Editar conta', edit_user_registration_path %></li>
        <li class="divider"></li>
        <li><%= link_to 'Sair', destroy_user_session_path, :method =>'delete' %></li>
      </ul>
    </li>
<% else %>
    <li><%= link_to 'Entrar', new_user_session_path %></li>
    <!-- FIXME: solução temporária para não deixar qualquer um criar conta -->
    <% if current_user and current_user.is_admin? %>
        <li><%= link_to 'Criar conta', new_user_registration_path %></li>
    <% end %>
<% end %>