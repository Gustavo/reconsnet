<li class="dropdown <%= 'active' if request.original_url.include? '/activities' %>">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Atividades <span class="caret"></span></a>
  <ul class="dropdown-menu" role="menu">
    <% @activities.each do |activity| %>
        <li><%= link_to activity.name, activity_path(activity) %></li>
    <% end  %>
    <li class="divider"></li>
    <% if policy(Activity).create? %>
        <li><%= link_to 'Adicionar', new_activity_path %></li>
    <% end %>
        <li><%= link_to 'Ver todas', activities_path %></li>
  </ul>
</li>