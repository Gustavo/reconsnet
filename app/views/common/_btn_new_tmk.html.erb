<% event = local_assigns.fetch :event, false %>
<% with_who = local_assigns.fetch :with_who, false %>

<% p = {} %>
<% p[:event_id] = event.id if event %>
<% p[:with_who_id] = with_who.id if with_who %>

<% path = p.empty? ? new_tmk_path : new_tmk_path(**p) %>

<% if policy(Tmk).create? %>
    <%= link_to '<i class="fa fa-phone"></i> TMK'.html_safe,
                path, class: 'btn btn-success btn-xs' %>
<% end %>