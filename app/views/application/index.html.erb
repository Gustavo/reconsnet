
  <div class="jumbotron text-center">
    <%= image_tag 'cit-logo.png' %>
    <h2>Sistema de Gestão de Pessoas</h2>
    <p>Uma ferramenta focada para as ICs gerenciar seus voluntários e alunos.</p>
    <br>
    <p><%= link_to "Saiba Mais #{fa_icon('angle-right')}".html_safe, about_path, class: 'btn btn-default btn-lg' %></p>
  </div>


  <!-- Atividades em destaque -->

  <div class="container">

    <h1 class="text-center">Atividades em destaque</h1>
    <p>
      <button type="button" class="btn btn-primary">Primary</button>
    </p>
    <h4 class="text-center"><%= link_to "#{fa_icon('calendar')} AGENDA".html_safe, events_path, class: "btn btn-primary" %>
      ou <%= link_to "#{fa_icon('fa-thumb-tack')} ATIVIDADES".html_safe, activities_path %>
    </h4>


    <br><br>
    <div class="row">
        <% @activities.each do |activity| %>
            <div class="col-sm-6 col-md-4">
              <%= render 'common/activity_summary', activity: activity %>
            </div>
        <% end %>
    </div>

  </div>


