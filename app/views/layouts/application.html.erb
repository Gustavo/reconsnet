<!DOCTYPE html>
<html>
<head>
  <title>Intranet Reconscientia</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= yield :stylesheets %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

    <!-- Need to place gon in the body since turbolinks does not reload the head info -->
    <%= include_gon %>


    <!-- Navbar -->
    <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <a href="<%= tasks_path %>" class="navbar-brand">Intranet Reconscientia</a>
        <ul class="nav navbar-nav pull-right">
          <li <%= ('class=active' if @menu == 'help') %>>
            <%= link_to 'Ajuda', '', target: '_blank' %></li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= session[:full_name] %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'PreferÃªncias', '' %></li>
              <li class="divider"></li>
              <li><%= link_to 'Sair', '' %></li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Actual content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <%= yield :top %>
        </div>
      </div>
      <div class="row">
        <% if @left_panel %>
            <div class="col-lg-4"><%= yield :left_panel %></div>
            <div class="col-lg-8"><%= content_for?(:content_panel) ? yield(:content_panel) : yield %></div>
        <% else %>
            <div class="col-lg-12"><%= content_for?(:content_panel) ? yield(:content_panel) : yield %></div>
        <% end %>
      </div>
    </div>


</body>
</html>
