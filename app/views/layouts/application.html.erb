<!DOCTYPE html>
<html>
<head>
  <title>ReconsNet</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= yield :stylesheets %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

    <!-- Need to place gon in the body since turbolinks does not reload the head info -->
    <%= include_gon %>


    <!-- Navbar -->
    <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <a href="<%= tarefas_path %>" class="navbar-brand">ReconsNet</a>
        <ul class="nav navbar-nav pull-right">

          <% if user_signed_in? %>
              <li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
          <% else %>
              <li><%= link_to 'Login', new_user_session_path %></li>
          <% end %>

          <% if user_signed_in? %>
              <li><%= link_to 'Edit account', edit_user_registration_path %></li>
          <% else %>
              <li><%= link_to 'Sign up', new_user_registration_path %></li>
          <% end %>

        </ul>
      </div>
    </nav>

    <!-- Actual content -->
    <div class="container">
        <div class="row col-lg-12">
          <%= yield :back_link %>
        </div>
        <div class="row">
            <div class="col-lg-6">
              <%= yield :titulo_pagina %>
            </div>
            <div class="col-lg-6">
              <h3><!-- O hX deve ser o mesmo do titulo da pagina para os dois ficarem alinhados horizontalmente-->
                <div class="pull-right">
                    <%= yield :actions %>
                </div>
              </h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
              <%= render 'common/flash_msgs' %>
            </div>
        </div>

      <div class="row">
        <% if @left_panel %>
            <div class="col-lg-4"><%= yield :left_panel %></div>
            <div class="col-lg-8"><%= content_for?(:content_panel) ? yield(:content_panel) : yield %></div>
        <% else %>
            <div class="col-lg-12"><%= content_for?(:content_panel) ? yield(:content_panel) : yield %></div>
        <% end %>
      </div>

    </div>



</body>
</html>
