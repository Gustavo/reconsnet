
<div class="panel panel-default">

  <div class="panel-heading">
    <h3 class="panel-title">Arquivos
      <% unless @event.archived %>
          <div class="pull-right">

            <!-- Botão de adição BEGIN -->

            <div class="btn-group">
              <button type="button" class="btn btn-success btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <%= fa_icon('plus') %>
              </button>

              <ul class="dropdown-menu dropdown-menu-right" role="menu">
                <% Asset.asset_types.keys.to_a.each do |asset_type| %>
                    <li>
                      <%= link_to I18n.t("asset_types.#{asset_type}"),
                                  new_asset_path(assetable_id: @event.id,
                                                 assetable_type: 'Event', asset_type: asset_type) %>
                    </li>

                <% end %>
              </ul>
            </div>

            <!-- Botão de adição END -->

          </div>
      <% end %>
    </h3>
  </div>

  <div class="panel-body">

    <!-- Listagem de arquivos BEGIN -->

    <% asset_unavaliable = true  %>
    <% @assets.each do |asset| %>
        <% if policy(asset).show?  %>
            <% asset_unavaliable = false %>
            <h5>
              <%= I18n.t("asset_types.#{asset.asset_type}") %><br>
              <small class="text-muted">
                <%= asset.file_file_name + ' (' + number_to_human_size(asset.file_file_size) + ')' %><br>
                <%= date_display(asset.created_at) %>
              </small>
              <span class="pull-right">
                <%= link_to fa_icon('download'), asset.file.url, class: 'btn btn-link btn-xs', target: '_blank' %>
                <% unless @event.archived %>
                    <%= render 'common/btn_delete', btn_label: '', url: asset_path(asset,
                                                                                   assetable_id: @event.id,
                                                                                   assetable_type: 'Event',
                                                                                   asset_type: asset.asset_type),
                               size: 'btn-xs', resource: asset %>
                <% end %>
              </span>

            </h5>
        <% end %>
    <% end %>

    <% if asset_unavaliable %>
        Não há anexos ou você não tem permissão para visualiza-los
    <% end %>

    <!-- Listagem de arquivos END -->

  </div>
</div>