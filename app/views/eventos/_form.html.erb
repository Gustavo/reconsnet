
<%= bootstrap_form_for @evento, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6' do |f| %>

    <%= f.alert_message 'Favor corrigir o(s) erro(s) abaixo.' %>

    <%= f.text_field :name %>
    <%= f.select :tipo, Event::TIPOS, control_col: 'col-sm-3' %>
    <%= f.text_area :descricao %>
    <%= f.text_field :inicio, class: 'datetimepicker', control_col: 'col-sm-3' %>
    <%= f.text_field :fim, class: 'datetimepicker', control_col: 'col-sm-3' %>
    <%= f.submit 'Salvar' %>

    <% if action_name == 'edit' %>
        <% link = evento_path(@evento) %>
    <% else %>
        <% link = eventos_path %>
    <% end %>
    <%= link_to 'Cancelar', link, class: 'btn btn-link' %>

<% end %>
